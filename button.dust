    {?element}
        {element|s}
    {:else}
        {?href}
            <a href={href} {?id}id="{id}"{/id} class="c-button {class} {?disabled}c-button__is-disabled{/disabled}" >
                <span>{?text}{text}{/text}</span>
            </a>
        {:else}
            <button type="button" {?id}id="{id}"{/id} class="c-button {class}" {?disabled}disabled="disabled"{/disabled}>
                <span>{?text}{text}{/text}</span>
            </button>
        {/href}
    {/element}
