{?href}
    <a href="{href}" {+attrs /}>
        {body}
    </a>
{:else}
    <button type="{?type}{type}{:else}button{/type}" {+attrs /}>
        {body}
    </button>
{/href}

{<attrs}
    class="c-button {class}"
    {?id}id="{id}"{/id}
    {?name}name="{name}"{/name}
    {?value}value="{value}"{/value}
    {?role}role="{role}"{/role}
    {?onclick}onclick="{onclick}"{/onclick}
    {?disabled}disabled{/disabled}
    {attributes}
{/attrs}
