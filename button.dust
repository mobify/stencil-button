{?href}
    <a href={href} class="c-button {class} {?disabled}c--is-disabled{/disabled}" {?id}id="{id}"{/id}>
        <span>{body}</span>
    </a>
{:else}
    <button class="c-button {class}" {?disabled}c--is-disabled{/disabled} type="{?type}{type}{:else}button{/type}" {?id}id="{id}"{/id} {?disabled}disabled{/disabled}>
        <span>{body}</span>
    </button>
{/href}
