<style>
.alt-fonts {
    font-size: 15px;
    color: pink;
    font-family: Comic Sans, Comic Sans MS, cursive;
}

.c--cap-width {
    max-width: 150px;
}

.c-button.c--themed > span {
    background: #31b0d5;
    border-color: #31b0d5;
    color: white;
}

.c-button.c--themed:hover > span {
    background: #5bc0de;
    border-color: #31b0d5;
}

/* Improve UX for testing, including desktop browsers */
.c-button {
    cursor: pointer;
}

.c-button + .c-button {
    margin-left: 1em;
}

/* Test independent tap target */
.c-button.c--test-tap-target::before {
    height: 85px;
    background: hsla(0, 100%, 80%, 0.25);
}

.c-button.c--test-tap-target > span {
    min-height: 35px;
}
</style>

{@c-spec for="Button Component" repository=repo}
    {@c-spec__test describe=".c-button"}

        {@c-spec__case expect="It should render a standard button across all element types"}
            {@c-button}Button Element{/c-button}
            {@c-button href="#"}Anchor Element{/c-button}
        {/c-spec__case}

        {@c-spec__case expect="It should allow passing in a class."}
            {@c-button class="c--themed"}Button Element{/c-button}
            {@c-button class="c--themed" href="#"}Anchor Element{/c-button}
        {/c-spec__case}

        {@c-spec__case expect="It should inherit font size, style and colour by default"}
            <div class="alt-fonts">
                {@c-button}Button Element{/c-button}
                {@c-button href="#"}Anchor Element{/c-button}
            </div>
        {/c-spec__case}

        {@c-spec__case expect="It should allow long text wrapping"}
                {@c-button class="c--cap-width"}This Displays Text Wrapping For The Button Element{/c-button}
                {@c-button class="c--cap-width"  href="#"}The Displays Text Wrapping For The Anchor Element{/c-button}
        {/c-spec__case}

        {@c-spec__case expect="It align well with adjacent text"}
            <p> Lorem {@c-button}Button Element{/c-button} ipsum dolor sit amet. </p>
            <p> Lorem {@c-button href="#"}Anchor Element{/c-button} ipsum dolor sit amet.</p>
        {/c-spec__case}

        {@c-spec__case expect="It should appear disabled, and should do nothing"}
           {@c-button disabled="true"}Button Element{/c-button}
           {@c-button href="#" disabled="true"}Anchor Element{/c-button}
        {/c-spec__case}

        {@c-spec__case expect="It should be able to have a specified button type"}
           {@c-button type="button"}Button Element{/c-button}
           {@c-button type="submit"}Button Element{/c-button}
        {/c-spec__case}

        {@c-spec__case expect="Its tap target can be independently sized"}
           {@c-button class="c--themed c--test-tap-target" type="button"}Button Element{/c-button}
           {@c-button class="c--themed c--test-tap-target" type="submit"}Button Element{/c-button}
        {/c-spec__case}

    {/c-spec__test}
{/c-spec}

